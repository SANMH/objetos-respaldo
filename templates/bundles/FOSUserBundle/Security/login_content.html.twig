{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div align="center">

<img src="{{ asset('img/login.jpg') }}" alt="Symfony!" height="200" width="200" align="center"/>
<h1 class="h3 mb-3 font-weight-normal">Iniciar Sesion</h1>


<form class="form-signin" method="post" action="{{ path("fos_user_security_check") }}" method="post" >
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username" class="sr-only">{{ 'security.login.username'|trans }}Email</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" placeholder="Email" required autofocus />
    

    <label for="password" class="sr-only">{{ 'security.login.password'|trans }}Contrasena</label>
    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="ContraseÃ±a" required />

    <div class="checkbox mb-3">
            
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me" value="remember-me">{{ 'security.login.remember_me'|trans }}Recordar</label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" value="{{ 'security.login.submit'|trans }}" /> Entrar</button>

</form>
</br>
</br>
</br>
</div>