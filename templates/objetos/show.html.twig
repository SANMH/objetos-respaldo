{% extends 'base.html.twig' %}

{% block title %}Objetos{% endblock %}

{% block body %}
    <h1>Objetos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ objeto.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ objeto.name }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ objeto.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ objeto.fecha ? objeto.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('objetos_index') }}">Regresar a la lista</a>

    <a href="{{ path('objetos_edit', {'id': objeto.id}) }}">Editar</a>

    {{ include('objetos/_delete_form.html.twig') }}
